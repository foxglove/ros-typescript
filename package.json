    "eslint": "9.23.0",
    "eslint-plugin-file-progress": "3.0.2",
    "jest": "30.0.3",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "ts-jest": "29.3.4",
    "typescript": "5.8.3",
    "typescript-eslint": "8.35.1"
  },
  "packageManager": "yarn@4.5.3"
}
