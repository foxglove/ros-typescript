{
  "name": "@foxglove/ros1",
  "version": "4.0.0",
  "description": "Standalone TypeScript implementation of the ROS 1 (Robot Operating System) protocol with a pluggable transport layer",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "ros",
    "ros1",
    "robot",
    "operating",
    "system",
    "tcp",
    "protocol",
    "sockets"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/foxglove/ros-typescript.git"
  },
  "author": {
    "name": "Foxglove Technologies Inc",
    "email": "contact@foxglove.dev"
  },
  "homepage": "https://github.com/foxglove/ros-typescript",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./nodejs": {
      "types": "./dist/nodejs/index.d.ts",
      "default": "./dist/nodejs/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "bin": {
    "roscore": "./dist/nodejs/roscore.js"
  },
  "scripts": {
    "build": "tsc -b",
    "prepack": "yarn build",
    "prepublishOnly": "yarn lint:ci && yarn test",
    "roscore": "node --import esbuild-runner/register src/nodejs/roscore.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --forceExit"
  },
  "engines": {
    "node": ">= 14"
  },
  "dependencies": {
    "@foxglove/message-definition": "0.5.0",
    "@foxglove/rosmsg": "workspace:^",
    "@foxglove/rosmsg-serialization": "workspace:^",
    "@foxglove/xmlrpc": "workspace:^",
    "eventemitter3": "^5.0.0",
    "ipaddr.js": "^2.0.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "esbuild": "^0.25.4",
    "esbuild-runner": "^2.2.2",
    "jest": "^30.0.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  }
}
